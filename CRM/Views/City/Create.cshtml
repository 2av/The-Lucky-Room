    <link href="~/Content/Theme/Admin/css/themes/all-themes.css" rel="stylesheet" />
</div>
<div class="block-header">
    <h2>
        City Master
    </h2>
</div>
<!-- Inline Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Add New City
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="~/City/Index">List of City</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm())
                {


                    <div class="row clearfix">

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">

                                @Html.DropDownListFor(x => x.CountryId, new SelectList(ViewBag.CountryList, "Text", "Value"), "Select Country", new { @class = "form-control" })
            
                            </div>
                        </div>


                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">

                                @Html.DropDownListFor(x => x.StateId, new SelectList(ViewBag.StateList, "Text", "Value"), "Select State", new { @class = "form-control" })


                            </div>
                        </div>


                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.CityName, new { @class = "form-control" })
                                    <label class="form-label">City Name</label>
                                </div>
                            </div>
                        </div>
                     

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <input type="checkbox" value="1" id="remember_me" class="filled-in">
                            <label for="remember_me">IsActive</label>
                            <button type="submit" id="btnSubmit" class="btn btn-primary btn-lg m-l-15 waves-effect">SAVE</button>
                        </div>
                    </div>


                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<!-- #END# Inline Layout | With Floating Label -->

