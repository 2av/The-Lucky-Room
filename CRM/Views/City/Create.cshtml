<script>
   
    $("#btnSubmit").click(function () {

        debugger
        if ($("#CountryId").val() == "0") {
            alert("Please Select Country Name");
            $("#CountryId").focus();
            return false;
        };
        if ($("#StateId").val() == "0") {
            alert("Please Select State Name");
            $("#StateId").focus();
            return false;
        };

        if ($("#CityName").val() == "") {
            alert("Please Enter City Name");
            $("#CityName").focus();
            return false;
        };

        if ($('#remember_me').is(":checked")) {
            IsActive = parseInt(1);
        }
        else {
            IsActive = parseInt(0);
        }

        var City = {
            CountryId: parseInt($("#ddlcountry").val()),
            StateId: parseInt($("#ddlState").val()),
            CityName: $("#CityName").val()
        };

        $.ajax({
            type: "POST",
            url: "/City/Create",
            data: JSON.stringify(City),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(data) {
                debugger;
                alert(data);
                if (data == "EXISTS") {
                    alert("City Name has been Already Exists.!");
                    return false;
                }
                if (data == "Insrted Successfully") {
                    alert("City Name has been save successfully.!");
                    $("#ddlcountry").val(0);
                    $("#ddlState").val(0);
                    $("#CityName").val('');
                    $('#remember_me').is(":checked", false);
                }
                else {
                    alert("Page Could't Connect to server");
                }
            }
        });

    });
</script>